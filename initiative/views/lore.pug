extends layout

block content
  nav(aria-label="breadcrumb")
    ul.breadcrumb
      li.breadcrumb-item
        a(href="../../codex") Codex
      if content
        li.breadcrumb-item
          a(href="../lore") Lore
        li.breadcrumb-item.active(aria-current="page")= title
      else
        li.breadcrumb-item.active(aria-current="page") Lore

  if content
    a(href="../lore/") Retour au Lore.
    hr
    article
      h1.entry-title= title
      div!= content
  else if entries
    p.lead Entrée disponibles dans le Codex :
    button.btn.btn-outline-primary#add-entry(type="action") Nouvelle entrée
    ul
      each entry in entries
        li
          a(href="/codex/lore/"+entry)= entry
  else if error
    p.lead= error.message
  else
    p.lead Aucune entrée disponible dans le Codex.
  
  script
    include ../public/javascripts/lore.js
